<!DOCTYPE html>
<html lang="en">

<head>
    <title>Flash Cards</title>
    <link rel="stylesheet" href="../stylesheets/style.css">
</head>

<body>
    <header>
        <img src="../img/logo.png">
        <p>An app to help you study</p>
    </header>
    <section class="namecard">
        <div class="namecard-hello">
            <p class="namecard-greeting">Welcome, <%= name %></p>
            <form action="/goodbye" method="POST" class="namecard-exit">
                <button type="submit"><img src="../img/close.svg"></button>
            </form>
        </div>
    </section>
    <section class="flashcards">
        <div class="card card-<%= side%>">
            <div class="card-header">
            </div>
            <h1 class="card-title"><%= side%></h1>
            <div id="content">
                <h2><%= text %></h2>
                <p id="hint">
                    <i class='hint'>Hint - <%= hint %></i>
                </p>
            </div>
            <div class="card-flip-wrap">
                <a href="<%= cardFlip %>"><img src="../img/flip.svg" class="card-flip"></a>
            </div>
            <div class="card-next">
                <a href="/card"><img src="../img/next.svg"></a>
            </div>
        </div>
        <script src="../js/app.js"></script>
    </section>
</body>

</html>